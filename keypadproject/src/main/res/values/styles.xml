<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="numericKey" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">43dp</item>
        <item name="android:onClick">onNumericKeyPressed</item>
        <item name="android:background">@drawable/btn_background</item>
        <item name="android:layout_marginTop">@dimen/numericKeyVerticalMargin</item>
        <item name="android:layout_marginBottom">@dimen/numericKeyVerticalMargin</item>
        <item name="android:layout_marginRight">@dimen/numericKeyHorizontalMargin</item>
        <item name="android:layout_marginLeft">@dimen/numericKeyHorizontalMargin</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/tv_state_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="controlKey" parent="Widget.AppCompat.Button">
        <item name="android:onClick">onControlKeyPressed</item>
        <item name="android:background">@drawable/btn_background</item>
        <item name="android:layout_margin">@dimen/controlKeyMargin</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/tv_state_color</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
