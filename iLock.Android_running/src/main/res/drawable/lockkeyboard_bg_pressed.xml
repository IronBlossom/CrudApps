<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp" />
            <solid android:color="#00000000" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners
                android:topLeftRadius="@dimen/keyboard_corner_padding"
                android:topRightRadius="@dimen/keyboard_corner_padding"
                android:bottomLeftRadius="@dimen/keyboard_corner_padding"
                android:bottomRightRadius="@dimen/keyboard_corner_padding" />
            <solid android:color="@color/keypad_color" />
        </shape>
    </item>
</layer-list>